<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="Editor.Views.ContentFolderView"
             xmlns:controls="clr-namespace:Editor.Controls">

    <Frame HasShadow ="False" BorderColor="{Binding BorderColor, FallbackValue='Black'}" BackgroundColor="{Binding IconBackgroundColor, FallbackValue='Grey'}">
        <VerticalStackLayout>
            <Label Text="Folder" HorizontalOptions="StartAndExpand" VerticalOptions="Start" HeightRequest="25"/>
            <controls:TreeView BackgroundColor="White"
               Margin="4"
               x:Name="FolderTree" />
        </VerticalStackLayout>
    </Frame>
</ContentView>
